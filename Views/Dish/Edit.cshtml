@model Dish
<form action="/edit/@Model.DishId" method="post">
    <div class="row">
        <div class="col s12">
            <h3>Edit @Model.Name</h3>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <a href="/">Home</a>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <div class="input-field col s12">
                <input asp-for="Chef" type="text" value="@Model.Chef">
                <label asp-for="Chef"></label>
                <span asp-validation-for="Chef"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Name" type="text" value="@Model.Name">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Calories" type="text" value="@Model.Calories">
                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col s4">
            <label asp-for="Tastiness"></label>
            <select class="browser-default" asp-for="Tastiness">
                @if(@Model.Tastiness == 1)
                {
                    <option value="1" selected>1</option>
                }
                else
                {
                    <option value="1">1</option>
                }
                @if(@Model.Tastiness == 2)
                {
                    <option value="2" selected>2</option>
                }
                else
                {
                    <option value="2">2</option>
                }
                @if(@Model.Tastiness == 3)
                {
                    <option value="3" selected>3</option>
                }
                else
                {
                    <option value="3">3</option>
                }
                @if(@Model.Tastiness == 4)
                {
                    <option value="4" selected>4</option>
                }
                else
                {
                    <option value="4">4</option>
                }
                @if(@Model.Tastiness == 5)
                {
                    <option value="5" selected>5</option>
                }
                else
                {
                    <option value="5">5</option>
                }
                
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <div class="col s4">
            <textarea asp-for="Description" class="materialize-textarea"></textarea>
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <button class="waves-effect waves-light btn" type="submit">Edit Dish</button>
        </div>
    </div>
</form>