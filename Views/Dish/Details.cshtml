@model Dish
<div class="row">
    <div class="col s12">
        <a href="/">Home</a>
    </div>
</div>
<div class="row">
    <div class="col s12 center-align">
        <h3>@Model.Name</h3>
        <h5>@Model.Chef</h5>
    </div>
</div>
<hr>
<div class="row">
    <div class="col s12">
        <p>@Model.Description</p>
        <p><strong>Calories:</strong> @Model.Calories</p>
        <p><strong>Tastiness:</strong> @Model.Tastiness</p>
    </div>
</div>
<div class="row">
    <div class="col s6 right-align">
        <a href="/dish/delete/@Model.DishId" class="waves-effect waves-light btn red">Delete</a>
    </div>
    <div class="col s6">
        <a href="/edit/@Model.DishId" class="waves-effect waves-light btn">Edit</a>
    </div>
</div>